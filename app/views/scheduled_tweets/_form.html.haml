= form_for @scheduled_tweet do |f|
  - if @scheduled_tweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scheduled_tweet.errors.count, "error")} prohibited this scheduled_tweet from being saved:"
      %ul
        - @scheduled_tweet.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :uid
    = f.text_field :uid
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :properties
    = f.text_field :properties
  .actions
    = f.submit 'Save'
