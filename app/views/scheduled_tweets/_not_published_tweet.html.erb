<div class="alert alert-light alert-dismissible fade show" role="alert" style="max-width: 550px;" data-scheduled-tweet-id="<%= tweet.id %>">
  <%= render partial: 'tweet_preview', locals: {user: preview_user, tweet: tweet} %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
