      <script>
    $(function () {
      $('#input-text').autosize();

      $('#input-text').on('keyup', function () {
        var remainingMax = 280;
        var $remainingCount = $('.remaining-count');
        var $preview = $('.tweet-preview');

        var $input = $(this);
        var previous = $input.data('previous');
        var current = $input.val();

        if (previous !== current) {
          console.log('text1', current);
          $remainingCount.text(remainingMax - current.length);
          var str = escapeTags(current).replace(/(?:\r\n|\r|\n)/g, '<br>');
          console.log('text2', str);
          $preview.html(str);
          $input.data('previous', current);
        }
      });

      $('.upload-file').on('click', function () {
        $('#input-image').trigger('click');
      });

      $('.preview-image-container').on('close.bs.alert', function (e) {
        $(this).hide();
        $('#input-image')[0].value = '';
        $('.preview-image').attr('src', null);
        return false;
      });

      function readURL(input) {
        console.log('readURL', input);

        if (input.files && input.files[0]) {
          var reader = new FileReader();

          reader.onload = function (e) {
            $('.preview-image').attr('src', e.target.result);
            $('.preview-image-container').show();
          };

          reader.readAsDataURL(input.files[0]);
        }
      }

      $('#input-image').change(function () {
        readURL(this);
      });

      function escapeTags(text) {
        var chars = {
          '&': '&amp;',
          '<': '&lt;',
          '>': '&gt;'
        };

        function replace(c) {
          return chars[c] || c;
        }

        return text.replace(/[&<>]/g, replace);
      }

      $('#time-picker').timepicker({
        'scrollDefault': 'now',
        'minTime': '0:00',
        'maxTime': '23:59',
        'step': 5
      });
    });

    flatpickr('#date-picker', {
      minDate: 'today',
      maxDate: '<%= 1.week.since.strftime("%Y/%m/%d") %>',
      allowInput: true
    });
  </script>

